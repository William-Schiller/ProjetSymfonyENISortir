{% block body %}
    <h1>Listes des sorties</h1>

    <a href="{{ url('tripManage_create') }}">Creer une sortie</a>

    <div>
        <div class="container">
        <div class="row">
            <div class="col-md-3">
                {% include 'trip/filter.html.twig' with {formSearch: formSearch} only %}
            </div>
            <div class="col-md-9">

            </div>
        </div>

        </div>

        {#  <form action="{{ url('trip_list') }}" method="post">
            <label>
                Liste Campus
