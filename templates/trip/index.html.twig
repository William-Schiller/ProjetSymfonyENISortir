    </div>

    <div class="container-fluid">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">CAMPUS</th>
                <th scope="col">NOM DE LA SORTIE</th>
                <th scope="col">DATE DE LA SORTIE</th>
                <th scope="col">CLOTURES</th>
                <th scope="col">INSCRITS/PLACES</th>
                <th scope="col">ETAT</th>
                <th scope="col">INSCRIT</th>
                <th scope="col">ORGANISATEUR</th>
                <th scope="col">ACTIONS</th>
            </tr>
            </thead>
            <tbody>
            {% for trip in trips %}
                <tr>
                    <td>{{ trip.campus.name }}</td>
                    <td>{{ trip.name }}</td>
                    <td>{{ trip.dateStart|date("d/m/Y") }}</td>
                    <td>{{ trip.dateLimitInscription|date("d/m/Y") }}</td>
                    <td>{{ trip.duration }}</td>
                    <td>{{ trip.status }}</td>
                    <td>{{ "X" }}</td>
                    <td>{{ trip.promoter }}</td>
                    <td>{{ "Afficher" }}</td>
                </tr>
            {% endfor %}


            </tbody>
        </table>

        <div class="row justify-content-between">
            <div>
                {% if numPage > 1 %}
                    <a href="{{ path('trip_list', {'numPage': numPage-1}) }}"> Précédent </a>
                {% endif %}
            </div>
            <div>
                {% if numPage < nbPages %}
                    <a href="{{ path('trip_list', {'numPage': numPage+1}) }}"> Suivant </a>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
