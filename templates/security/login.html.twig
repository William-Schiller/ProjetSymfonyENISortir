{% extends 'base.html.twig' %}

{% block title %}Se connecter!{% endblock %}

{% block body %}

    <div class="container-fluid text-center p-3 form-group">
        <h1 style="margin-top: 20px">Connexion</h1>
        <form method="post" >
            <div>
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            </div>

            <div class="row justify-content-around">
                <div class="col-md-3" style="margin-top: 70px">
                    <label for="inputPseudo">Identifiant </label>
                    <input type="text" value="{{ last_username }}" name="pseudo" id="inputPseudo" class="form-control" required autofocus>
                </div>
            </div>
            <div class="row my-4 justify-content-around" >
                <div class="col-md-3">
                    <label for="inputPassword">Mot de passe </label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </div>
       {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html #}

            <div class="col-12">
                <div class="form-check">
                    <label>
                        <input type="checkbox" id="remember_me" name="remember_me" checked> Se souvenir de moi
                    </label>
                </div>
            </div>
            <div class="col-12" style="margin-top: 30px ">
                    <button class="btn btn-lg btn-outline-primary" type="submit">
                        Connection
                    </button>
            </div>
        </form>
    </div>
{% endblock %}
