{% extends 'base.html.twig' %}


{% block title %}Villes{% endblock %}

{% block body %}
<div class="p-5">
<div class="text-center mb-5">
    <h1>GÃ©rer les campus</h1>
</div>
            <h5>Filtrer les campus :</h5>
    {{ form_start(formSearch) }}
            <div class="row my-4 justify-content-around ">
                <div class="col-md-1.5">
                    {{ form_label(formSearch.search, 'Le nom contient :')}}
                </div>
                <div class="col-md-2">
                    {{ form_widget(formSearch.search, {'attr': {'class': 'form-control'}}) }}
                    {{ form_row(formSearch.search) }}
                </div>
                <div class="col-md-2">
                <button type="submit" class="btn btn-outline-secondary">Rechercher</button>
                </div>
                <div class="col-md-6"></div>
            </div>
        </div>
    {{ form_end(formSearch) }}

    <table class="table">
    <thead>
    <tr>
        <th scope="col">Ville</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        {{ form_start(campusForm) }}

        <td>
            <div class="col-md-8">
                {{ form_widget(campusForm.name, {'attr': {'class': 'form-control'}}) }}
            <small class="text-danger">{{ form_errors(campusForm.name) }}</small>
            </div>
        </td>
        <td><a href="{{ path('city_create') }}">
                <button class="btn btn-outline-primary">Ajouter</button></a></td>
    </tr>
    {{ form_end(campusForm) }}
    {% for camp in campus %}
    <tr>
        <td>{{ camp.name }}</td>
        <td> <a href="{{ path('campus_modify', {'id': camp.id }) }}">
                <button class="btn btn-outline-secondary">Modifier</button></a>
            <a  href="{{ path('campus_delete', {'id': camp.id }) }}">
                <button class="btn btn-outline-danger">Supprimer</button></a>
        </td>
        {% endfor %}

    </tbody></table>
    <div class=" row justify-content-center navigation">
        {{ knp_pagination_render(campus) }}
    </div>
    </div>




    {% endblock %}
